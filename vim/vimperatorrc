set toolbars=none
set defsearch=duckduckgo

style -name ublock * #nav-bar * { visibility: visible; }

javascript <<EOF
    function pinboard() {
        let pinUrl = "https://pinboard.in/add?next=https://pinboard.in" +
            "&url=" + encodeURIComponent(content.location.href) +
            "&title=" + encodeURIComponent(content.document.title);
        window.content.window.open(pinUrl, "_blank");
    }
EOF

command! pinboard -description "Add in Pinboard.in" javascript pinboard()
