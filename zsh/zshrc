# System detection
if [[ -z "${OSTYPE:#darwin*}" ]]; then
    export IS_BSD=yes
    export IS_OSX=yes
elif [[ -z "${OSTYPE:#bsd*}" ]]; then export IS_BSD=yes
elif [[ -z "${OSTYPE:#linux*}" ]]; then export IS_LINUX=yes
fi

# zsh.d
for zshrc_snipplet in ~/.dotfiles/zsh/zsh.d/S[0-9][0-9]*[^~] ; do
    source $zshrc_snipplet
done